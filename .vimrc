set nocompatible
filetype on
filetype plugin on
filetype indent on
syntax on

set number relativenumber
set cursorline

set shiftwidth=4
set tabstop=4
set softtabstop=4
set autoindent

set nowrap
set smartcase
set showmatch
set hlsearch

"color molokai

nnoremap <Leader>cc :set color column=80<cr>
nnoremap <Leader>ncc: set color column-=80<cr>

set mouse=
