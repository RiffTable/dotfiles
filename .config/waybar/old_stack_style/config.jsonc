    // Modules configuration
    "hyprland/workspaces": {
        "show-special": false,
        "disable-scroll": true,
        "all-outputs": true,
        "warp-on-scroll": false,
        // "format": "{name}: {icon}",
        "format": "{icon}",
        "format-icons": {
            // Narrow No-break space: " "
            // "urgent": " ",
            // "active": " ",
            // "default": " ",
            // "empty": " ",
            "urgent": "",
            "active": "",
            "default": "",
            "empty": "",
        }
    },
    "clock": {
		"justify": "center",
        "format": "{0:%I:%M%p}\n<small>{0:%d %b} ({0:%a})</small>",
        // Help: https://howardhinnant.github.io/date/date.html#to_stream_formatting
        // "locale": "en_BN.UTF-8",
        "tooltip-format": "<tt>{calendar}</tt>",
    },
    "custom/spotify": {
        "format": "{}",
        "exec": "playerctl metadata --format '  {{ artist }} - {{ title }}'",
        "exec-if": "pgrep spotify",
        "max-length": 40,
        "interval": 2,
        // "return-type": "string"
    },
    "custom/gammastep": {
        "format": "{}",
        "exec": "pgrep -x gammastep >/dev/null && echo \" \" || echo \" \"",
        "on-click": "pkill gammastep || gammastep -O 4200&",   // 4200 even in hyprconf
        "interval": 2,
        // "return-type": "string",
    },
    "battery": {
        "states": {
            "warning": 20,
            "critical": 5
        },
        "events": {
            "on-discharging-warning": "notify-send -u normal \"Low Battery\"",
            "on-discharging-critical": "notify-send -u critical \"Very Low Battery\"",
            "on-charging-100": "notify-send -u normal \"Battery Full\""
        },
		"justify": "center",
        "tooltip-format": "{time}",

        "format": "{icon}\n<small>{capacity}</small>",
        "format-charging": "{icon}󱐋\n<small>{capacity}</small>",
        "format-full": "{icon}\n<small>{capacity}</small>",
        "format-plugged": "\n<small>{capacity}</small>",

        // "format-icons": ["󰂎 ", "󱊡 ", "󱊢 ", "󱊣 "],
        "format-icons": ["󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
        // "format-icons": ["󰂎", "󰁻", "󰁽", "󰁿", "󰂁", "󰁹"],
        // "format-icons": [" ", " ", " ", " ", " "],
    },
    "network": {
        "format-wifi": "{bandwidthTotalBytes}  {icon} ",
        "format-ethernet": "{bandwidthTotalBytes}  󰈀 ",
        "format-disconnected": "󰤮 ",
        "format-linked": "(No IP)",
        "tooltip-format": "{essid} ({signalStrength}%)",
        "format-alt": "{essid} ({signalStrength}%)",
        "format-icons": ["󰤟", "󰤢", "󰤥", "󰤨"],
        "interval": 5,
        // {bandwidthUpBytes}: Instant up speed in bytes/seconds.
        // {bandwidthDownBytes}: Instant down speed in bytes/seconds.
    },
	"pulseaudio#source": {
		"justify": "center",
		"format": "{format_source}",
		"format-source": "\n<small>{volume}</small>",
        "format-source-muted": "",

        "on-click": "pavucontrol",
	},
	"pulseaudio#sink": {
        // "scroll-step": 1, // %, can be a float
		"justify": "center",
        "format": "{icon}\n<small>{volume}</small>",
        "format-bluetooth": "{icon}\n<small>{volume}</small>",
        "format-bluetooth-muted": " ",
        "format-muted": " ",

        "format-icons": {
            "headphone": "",
            "hands-free": "󰋎",
            "headset": "󰋎",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol",
    },
    "custom/power": {
        "format": " ",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
        "menu-actions": {
            "shutdown": "shutdown",
            "reboot": "reboot",
            "suspend": "systemctl suspend",
            "hibernate": "systemctl hibernate"
        }
    },
    "custom/seperator": {
        "format": " | ",
        "interval": "once",
    },
